{
	"extends": "tsconfig/react-library.json",
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "ES2015"],
		"allowJs": true,
		"checkJs": true,
		"resolveJsonModule": true,
		"resolvePackageJsonExports": true,
		"resolvePackageJsonImports": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"declaration": true,
		// "composite": true,
		// "declarationMap": true,
		"target": "ESNext",
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": { "~/*": ["./src/*"] }
	},
	"include": ["./src/**/*.js", "./src/**/*.ts", "./tsup.config.ts"]
}
