{
	"extends": "tsconfig/react-library.json",
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "ES2015"],
		"allowJs": true,
		"checkJs": true,
		"resolveJsonModule": true,
		"moduleResolution": "Bundler",
		"declaration": true,
		// "composite": true,
		// "declarationMap": true,
		"target": "ESNext",
		"outDir": "./dist"
	},
	"include": ["./src/**/*.js", "./src/**/*.ts", "./tsup.config.ts"]
}
