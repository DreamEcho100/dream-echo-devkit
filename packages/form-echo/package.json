{
	"name": "@de100/form-echo",
	"version": "0.0.14",
	"description": "A form state management for fields validations and errors",
	"keywords": [
		"form",
		"store",
		"manage",
		"react",
		"zustand",
		"zod",
		"front-end",
		"hooks",
		"forms",
		"form-validation",
		"validation",
		"typescript",
		"react-hooks"
	],
	"license": "MIT",
	"author": {
		"name": "Mazen Mohamed",
		"email": "maze6572198@gmail.com",
		"url": "https://github.com/DreamEcho100/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/DreamEcho100/dream-echo-devkit",
		"directory": "packages/form-echo"
	},
	"readme": "./README.md",
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js",
			"default": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./helpers": {
			"import": "./dist/helpers/index.mjs",
			"require": "./dist/helpers/index.js",
			"default": "./dist/helpers/index.js",
			"types": "./dist/helpers/index.d.ts"
		},
		"./react/zustand": {
			"import": "./src/react/zustand/dist/index.mjs",
			"require": "./src/react/zustand/dist/index.js",
			"default": "./src/react/zustand/dist/index.js",
			"types": "./src/react/zustand/dist/index.d.ts"
		}
	},
	"scripts": {
		"lint": "eslint *.ts*",
		"build": "npm run build:base & npm run build:react:zustand",
		"build:base": "cross-env NODE_ENV=production tsup --config=./tsup.config.ts",
		"build:react:zustand": "cross-env NODE_ENV=production tsup --config=./src/react/zustand/tsup.config.ts",
		"dev": "pnpm run build -- --watch",
		"typechecking": "tsc --noEmit"
	},
	"devDependencies": {
		"@types/node": "^20.1.3",
		"@types/react": "^18.2.6",
		"cross-env": "^7.0.3",
		"esbuild-plugin-external-global": "^1.0.1",
		"eslint": "^8.40.0",
		"eslint-config-custom": "workspace:*",
		"tsconfig": "workspace:*",
		"tsup": "^6.7.0",
		"typescript": "^5.0.4",
		"zod": "^3.21.4"
	}
}
